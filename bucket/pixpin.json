{
    "version": "1.0.9.1",
    "description": "A full-featured screen capture tool",
    "homepage": "https://pixpinapp.com/",
    "license": {
        "identifier": "Shareware",
        "url": "https://pixpinapp.com/"
    },
    "architecture": {
        "64bit": {
            "url": "https://download.pixpinapp.com/PixPin_1.0.9.1.zip",
            "hash": "237a28da4effc86a6e4d8497f6fd31b76d6048aed3ef5850c70b728315fbbbc8"
        }
    },
    "pre_install": [
        "if (!(Test-Path \"$dir\\pixpin.log\")) { New-Item \"$dir\\pixpin.log\" -ItemType Directory | Out-Null }",
        "if (!(Test-Path \"$dir\\LocalStorage.data\")) { New-Item \"$dir\\LocalStorage.data\" -ItemType File | Out-Null }"
    ],
    "extract_dir": "PixPin",
    "persist": [
        "History",
        "Config",
        "Data",
        "pixpin.log",
        "LocalStorage.data"
    ],
    "shortcuts": [
        [
            "PixPin.exe",
            "PixPin"
        ]
    ],
    "checkver": {
        "script": [
            "$url = 'https://pixpinapp.com/'",
            "$req = Invoke-WebRequest -Uri $url -MaximumRedirection 0 -ErrorAction SilentlyContinue",
            "Write-Output $req.Headers.Location"
        ],
        "regex": "https://download.pixpinapp.com/PixPin_[\\d\\.]+.exe"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://download.pixpinapp.com/PixPin_$version.zip"
            }
        }
    }
}
